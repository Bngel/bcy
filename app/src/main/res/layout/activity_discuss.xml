<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/close_btn_DiscussActivity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/exit_set_password_activity_101010"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="22dp">

                <com.bngel.bcy.widget.others.AvtView
                    android:id="@+id/avt_DiscussActivity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rem"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="13dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/username_DiscussActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户名测试ID"
                            android:textSize="14sp"
                            android:textColor="#101010"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/date_DiscussActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:textColor="#CBCBCB"
                            android:text="2001-01-01"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fans_count_DiscussActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="粉丝数: 1648万"
                        android:textSize="12dp"
                        android:textColor="#CECECE"
                        android:gravity="left"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/follow_btn_DiscussActivity"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:text="关注"
                        android:layout_gravity="right"
                        android:textSize="12dp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bk_follow_btn_discuss_activity"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tags_DiscussActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/description_DiscussActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:id="@+id/cosPhoto_DiscussActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#101010"
                    android:text="评论"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/comment_count_DiscussActivity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20"
                    android:layout_marginLeft="9dp"
                    android:textSize="14sp"
                    android:textColor="#979797"/>

                <TextView
                    android:id="@+id/hottest_btn_DiscussActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#101010"
                    android:text="最热"/>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="#BBBBBB"
                    android:layout_margin="8dp"/>

                <TextView
                    android:id="@+id/newest_btn_DiscussActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#CEC4C4"
                    android:text="最新"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comments_DiscussActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="16dp"
            android:text="添加评论"
            android:textSize="12dp"
            android:gravity="left"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:textColor="#CBCBCB"
            android:background="@drawable/bk_add_comment_edit_discuss_activity"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_btn_DiscussActivity"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/like_discuss_card_home_fragment_cecece"/>

                <TextView
                    android:id="@+id/like_text_DiscussActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:layout_gravity="center_vertical"
                    android:text="999+"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favor_btn_DiscussActivity"
                    android:layout_width="22dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="22dp"
                    android:src="@drawable/star_discuss_card_home_fragment_cecece"/>

                <TextView
                    android:id="@+id/favor_text_DiscussActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="999+"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/comment_btn_DiscussActivity"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/comment_discuss_card_home_fragment_cecece"/>

                <TextView
                    android:id="@+id/comment_text_DiscussActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="left"
                    android:text="999+"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
