<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close_btn_QAndADetailActivity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/exit_set_password_activity_101010"
            android:layout_margin="20dp"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/more_btn_QAndADetailActivity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/more_qanda_detail_activity_101010"
            android:layout_alignParentRight="true"
            android:layout_margin="13dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="8dp"
                android:background="@drawable/bk_q_and_a_question_q_and_a_activity">

                <LinearLayout
                    android:id="@+id/tags_QAndADetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>

                <TextView
                    android:id="@+id/title_QAndADetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#101010"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="问题XXXXXXXXXXXXX"/>

                <TextView
                    android:id="@+id/description_QAndADetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textColor="#101010"
                    android:text="详细说明"/>

                <TextView
                    android:id="@+id/followCount_QAndADetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="37关注"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:textColor="#101010"
                    android:layout_marginBottom="8dp"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/answer_qanda_detail_activity_101010"/>

                    <TextView
                        android:id="@+id/answerCount_QAndADetailActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:text="166 回答"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/hottest_btn_QAndADetailActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#101010"
                        android:text="最热"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:background="#BBBBBB"
                        android:layout_margin="8dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/newest_btn_QAndADetailActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#CEC4C4"
                        android:layout_gravity="center_vertical"
                        android:text="最新"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/answer_cards_QAndADetailActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/follow_btn_QAndADetailActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="3dp"
            android:orientation="vertical"
            android:background="@drawable/bk_bottom_q_and_a_detail_activity">
            
            <ImageView
                android:id="@+id/add_follow_btn_QAndADetailActivity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/add_qanda_detail_activity_101010"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/follow_text_QAndADetailActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#101010"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/answer_btn_QAndADetailActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="20dp"
            android:paddingBottom="3dp"
            android:orientation="vertical"
            android:background="@drawable/bk_bottom_q_and_a_detail_activity">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/edit_qanda_detail_activity_101010"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要回答"
                android:layout_marginTop="2dp"
                android:textSize="14sp"
                android:textColor="#101010"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
