<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="19dp"
            android:text="取消"
            android:textColor="#101010"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#101010"
            android:text="回复提问"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="提问:xxxxxxxxxxxxxxx"
                android:textColor="#101010"
                android:textSize="16sp"
                android:padding="11dp"/>
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="回复 \@xxxxx"
            android:textSize="13sp"
            android:textColor="#101010"
            android:layout_margin="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/bk_answer_edit_answer_question_box"
            android:scrollbars="vertical"
            android:gravity="top"
            android:padding="5dp"
            android:layout_marginTop="8dp"/>
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/pic_answer_question_activity_bfbfbf"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"/>
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/emoji_answer_question_activity_bfbfbf"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="发送"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginRight="11dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/bk_send_answer_answer_question_box_activity"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>