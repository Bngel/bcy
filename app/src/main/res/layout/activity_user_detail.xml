<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="244dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:src="@drawable/re0"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/exit_user_detail_activity_ffffff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/msgbox_user_detail_activity_ffffff"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/msg_user_detail_activity_ffffff"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/more_user_detail_activity_ffffff"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="139dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bk_user_detail_card_user_detail_activity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <com.bngel.bcy.widget.others.AvtView
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:src="@drawable/rem"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#484848"
                            android:text="xxxxxxxxxxxxxxxx"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:src="@drawable/nv_user_detail_activity_e87b9c"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:layout_marginLeft="6dp"
                                android:text="2003-03-08"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:layout_marginLeft="11dp"
                                android:text="福建龙岩"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:text="3 粉丝"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:layout_marginLeft="15dp"
                                android:text="134 关注"/>

                            <TextView
                                android:layout_width="76dp"
                                android:layout_height="34dp"
                                android:text="+ 关注"
                                android:gravity="center"
                                android:background="@drawable/bk_follow_btn_community_card_view"
                                android:textColor="#F06A0F"
                                android:layout_marginLeft="48dp"
                                android:layout_marginRight="9dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:text="简介xxxxxxxxxxxxxxxxxxx"
                    android:ellipsize="end"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="14dp">

            <RelativeLayout
                android:layout_width="37dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="发布"
                    android:textColor="#CCBE97"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CCBE97"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:text="喜欢"
                    android:textColor="#CCBE97"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.bngel.bcy.widget.HomeFragment.DiscussCardHomeFragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.bngel.bcy.widget.HomeFragment.DiscussCardHomeFragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.bngel.bcy.widget.HomeFragment.DiscussCardHomeFragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.bngel.bcy.widget.HomeFragment.DiscussCardHomeFragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>