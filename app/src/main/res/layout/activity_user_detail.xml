<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="244dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="191dp"
                    android:src="@drawable/re0"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/close_btn_UserDetailActivity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/exit_user_detail_activity_ffffff"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/editInfo_UserDetailActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:text="编辑资料"
                    android:visibility="gone"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/more_user_detail_activity_ffffff"
                    android:layout_margin="11dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="346dp"
                android:layout_height="139dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bk_user_detail_card_user_detail_activity">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <com.bngel.bcy.widget.others.AvtView
                        android:id="@+id/avt_UserDetailActivity"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:src="@drawable/rem"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username_UserDetailActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#484848"
                            android:text="xxxxxxxxxxxxxxxx"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <ImageView
                                android:id="@+id/sex_UserDetailActivity"
                                android:layout_width="19dp"
                                android:layout_height="19dp"
                                android:src="@drawable/nv_user_detail_activity_e87b9c"/>

                            <TextView
                                android:id="@+id/birthday_UserDetailActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:layout_marginLeft="6dp"
                                android:text="2003-03-08"/>

                            <TextView
                                android:id="@+id/address_UserDetailActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:layout_marginLeft="11dp"
                                android:text="福建龙岩"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/fan_count_text_UserDetailActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:text="3 粉丝"/>

                            <TextView
                                android:id="@+id/follow_count_text_UserDetailActivity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="#101010"
                                android:layout_marginLeft="15dp"
                                android:text="134 关注"/>

                            <TextView
                                android:id="@+id/follow_btn_UserDetailActivity"
                                android:layout_width="76dp"
                                android:layout_height="34dp"
                                android:text="+ 关注"
                                android:gravity="center"
                                android:background="@drawable/bk_follow_btn_community_card_view"
                                android:textColor="#F06A0F"
                                android:layout_marginLeft="48dp"
                                android:layout_marginRight="9dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/description_UserDetailActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="29dp"
                    android:layout_marginRight="29dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:text="简介xxxxxxxxxxxxxxxxxxx"
                    android:ellipsize="end"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="14dp"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:text="个人主页"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:paddingTop="14dp">

            <RelativeLayout
                android:layout_width="37dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/create_switch_UserDetailActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="发布"
                    android:textColor="#CCBE97"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp">

                <TextView
                    android:id="@+id/like_switch_UserDetailActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="喜欢"
                    android:textColor="#CCBE97"
                    android:textSize="16sp" />

            </RelativeLayout>
        </LinearLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager_UserDetailActivity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
</ScrollView>