<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_set_password_activity_101010"
            android:layout_margin="17dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#101010"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的消息"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <EditText
            android:layout_width="325dp"
            android:layout_height="26dp"
            android:hint="搜索"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:background="@drawable/bk_discuss_edit_community_detail_activity"
            android:paddingLeft="20dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="17dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/aite_msgbox_activity_ffffff"
                    android:background="@drawable/bk_aite_msgbox_activity"
                    android:padding="11dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="\@我的"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="#101010"
                    android:layout_marginLeft="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right_fragment_me_7b7878"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="17dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/msg_user_detail_activity_ffffff"
                    android:background="@drawable/bk_comment_msgbox_activity"
                    android:padding="11dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="评论"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="#101010"
                    android:layout_marginLeft="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right_fragment_me_7b7878"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:paddingRight="17dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/like_msgbox_activity_ffffff"
                    android:background="@drawable/bk_like_msgbox_activity"
                    android:padding="11dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="赞"
                    android:gravity="center_vertical"
                    android:textSize="18sp"
                    android:textColor="#101010"
                    android:layout_marginLeft="16dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/right_fragment_me_7b7878"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.bngel.bcy.widget.others.MsgCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.bngel.bcy.widget.others.MsgCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.bngel.bcy.widget.others.MsgCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.bngel.bcy.widget.others.MsgCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.bngel.bcy.widget.others.MsgCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>