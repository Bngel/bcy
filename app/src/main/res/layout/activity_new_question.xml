<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="19dp"
            android:text="取消"
            android:textColor="#101010"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#101010"
            android:text="发布提问"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="19dp"
            android:text="下一步"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#101010"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="写下你想与大家讨论的问题"
            android:background="@null"
            android:textSize="20sp"
            android:layout_margin="22dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#BBBBBB"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_margin="22dp"
            android:hint="补充说明"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:src="@drawable/add_answer_question_activity_bfbfbf"
            android:background="@drawable/bk_add_btn_answer_question_activity"
            android:padding="25dp"
            android:layout_margin="19dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pic_answer_question_activity_bfbfbf"
            android:layout_margin="9dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/emoji_answer_question_activity_bfbfbf"
            android:layout_margin="9dp"/>
    </LinearLayout>
</LinearLayout>