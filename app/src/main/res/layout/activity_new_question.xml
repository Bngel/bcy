<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/close_btn_NewQuestionActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="19dp"
            android:text="取消"
            android:textColor="#101010"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#101010"
            android:text="发布提问"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/title_NewQuestionActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="写下你想与大家讨论的问题"
            android:background="@null"
            android:textSize="20sp"
            android:layout_margin="22dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            android:background="#BBBBBB"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/description_NewQuestionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_margin="22dp"
                android:hint="补充说明"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/photos_NewQuestionActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_btn_NewQuestionActivity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pic_answer_question_activity_bfbfbf"
            android:layout_margin="9dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/emoji_answer_question_activity_bfbfbf"
            android:layout_margin="9dp"/>

        <TextView
            android:id="@+id/tags_NewQuestionActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:textColor="#7B7878"
            android:text="编辑标签"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"/>

        <TextView
            android:id="@+id/send_btn_NewQuestionActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#101010"
            android:text="发布"
            android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"/>

    </LinearLayout>
</LinearLayout>