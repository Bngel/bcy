<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close_btn_CommunityDetailActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/exit_set_password_activity_101010"
            android:layout_margin="17dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <ImageView
                android:id="@+id/search_btn_CommunityDetailActivity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/search_community_detail_activity_101010" />

            <ImageView
                android:id="@+id/more_btn_CommunityDetailActivity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="11dp"
                android:src="@drawable/more_qanda_detail_activity_101010" />
        </LinearLayout>
    </RelativeLayout>

    <com.wang.sticky.StickyNestedScrollLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="@drawable/bk_community_detail_card_community_detail_activity"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:id="@+id/image_CommunityDetailActivity"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/rem"/>
                    
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="16dp">
                        
                        <TextView
                            android:id="@+id/circle_name_CommunityDetailActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="#101010"
                            android:layout_marginTop="13dp"
                            android:text="圈子名"/>

                        <TextView
                            android:id="@+id/description_CommunityDetailActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:textSize="14sp"
                            android:textColor="#BFBFBF"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介简介"/>

                        <TextView
                            android:id="@+id/counts_CommunityDetailActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:textSize="12sp"
                            android:textColor="#979797"
                            android:text="23w 帖子  23456个成员"/>
                    </LinearLayout>
                </LinearLayout>
                
                <TextView
                    android:id="@+id/follow_btn_CommunityDetailActivity"
                    android:layout_width="326dp"
                    android:layout_height="44dp"
                    android:textSize="14dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#101010"
                    android:text="关注圈子"
                    android:background="@drawable/bk_follow_community_community_detail_activity"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bk_tab_items_community_detail_activity"
                android:tag="sticky"
                android:paddingLeft="23dp"
                android:paddingRight="23dp"
                android:paddingTop="11dp"
                android:paddingBottom="13dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/switch_discuss_btn_CommunityDetailActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="文章"
                        android:textSize="18sp"
                        android:textColor="#CCBE97"
                        android:gravity="center"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/switch_qa_btn_CommunityDetailActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="问答"
                        android:textSize="18sp"
                        android:textColor="#101010"
                        android:gravity="center"/>

                </RelativeLayout>

            </LinearLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_CommunityDetailActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.wang.sticky.StickyNestedScrollLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        
        <EditText
            android:layout_width="325dp"
            android:layout_height="26dp"
            android:hint="我也来发一帖~"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:background="@drawable/bk_discuss_edit_community_detail_activity"
            android:paddingLeft="20dp"/>

    </RelativeLayout>
</LinearLayout>