<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="17dp"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:paddingRight="11dp">
    
    <com.bngel.bcy.widget.others.AvtView
        android:id="@+id/avt_MsgCardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rem"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username_MsgCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#101010"
            android:text="xxxxxx"/>

        <TextView
            android:id="@+id/description_MsgCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="#101010"
            android:text="部分消息内容"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/date_MsgCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7B7878"
        android:textSize="12sp"
        android:text="14:49"
        android:gravity="right|top"/>

</LinearLayout>