<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bk_view_qanda_card">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/msg_qanda_card_view_bfbfbf"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp"/>

        <TextView
            android:id="@+id/qa_count_QAndACardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#BFBFBF"
            android:text="111"
            android:layout_marginTop="3dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_QAndACardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="标题测试测试测试测试测试测试测试测试"
            android:textColor="#101010"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/description_QAndACardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textColor="#7B7878"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date_QAndACardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="12dp"
                android:textSize="14sp"
                android:textColor="#101010"
                android:text="29秒前"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tags_QAndACardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#7B7878"
                android:text="标签"
                android:layout_marginLeft="17dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>