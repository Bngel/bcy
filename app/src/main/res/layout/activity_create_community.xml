<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/exit_set_password_activity_101010"
            android:layout_margin="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#101010"
            android:text="创建圈子"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bk_camera_create_community_activity"
        android:padding="28dp"
        android:layout_marginTop="43dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/camera_create_community_activity_101010"/>
    
    <EditText
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:background="@drawable/bk_edit_create_community_activity"
        android:hint="请输入圈子标题 (5-20个字)"
        android:layout_marginTop="53dp"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:background="@drawable/bk_edit_create_community_activity"
        android:hint="请输入圈子简介 (50字以内)"
        android:layout_marginTop="32dp"
        android:textSize="14dp"
        android:gravity="top"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:background="@drawable/bk_edit_create_community_activity"
        android:hint="请输入成员昵称 (最多5个字)"
        android:layout_marginTop="32dp"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"/>
    
    <TextView
        android:layout_width="300dp"
        android:layout_height="42dp"
        android:text="确认创建"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:background="@drawable/bk_finish_create_community_activity"
        android:layout_marginTop="60dp"
        android:textColor="#FFFFFF"
        android:textSize="16dp"/>
</LinearLayout>