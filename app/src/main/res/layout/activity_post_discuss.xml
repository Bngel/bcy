<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/close_btn_PostDiscussActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="19dp"
            android:text="取消"
            android:textColor="#101010"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#101010"
            android:text="发布内容"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/more_btn_PostDiscussActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="19dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/more_qanda_detail_activity_101010"
            android:textColor="#101010"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/content_PostDiscussActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="19dp"
                android:hint="正文 (小于15000字)"
                android:textSize="18sp"
                android:background="@null"/>

            <LinearLayout
                android:id="@+id/photos_PostDiscussActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_btn_PostDiscussActivity"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/pic_answer_question_activity_bfbfbf"
            android:layout_margin="9dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/emoji_answer_question_activity_bfbfbf"
            android:layout_margin="9dp"/>

        <TextView
            android:id="@+id/tags_PostDiscussActivity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:ellipsize="end"
            android:textColor="#7B7878"
            android:text="编辑标签"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"/>

        <TextView
            android:id="@+id/send_btn_PostDiscussActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#101010"
            android:text="发布"
            android:gravity="right|center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"/>

    </LinearLayout>
</LinearLayout>